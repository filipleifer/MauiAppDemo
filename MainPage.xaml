<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiAppDemo;assembly=MauiAppDemo"
             x:Name="PageRef"
             x:Class="MauiAppDemo.MainPage">
    <ContentPage.Resources>
        <Color x:Key="MyColor">Red</Color>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry Text="{Binding Text}" TextColor="{StaticResource MyColor}" />
            <Label Text="{Binding Text}" TextColor="{StaticResource MyColor}" />
           
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
